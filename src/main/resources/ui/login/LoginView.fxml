<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.181" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.login.LoginView">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" text="Login window" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets left="10.0" top="15.0" />
         </padding>
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #82ac32;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <HBox prefHeight="27.0" prefWidth="200.0" spacing="15.0">
                     <children>
                        <Label style="-fx-text-fill: white;" text="Enter username:" />
                        <TextField fx:id="editTextUserName" />
                     </children>
                  </HBox>
                  <HBox prefHeight="27.0" prefWidth="200.0" spacing="15.0">
                     <children>
                        <Label style="-fx-text-fill: white;" text="Enter password:" />
                        <TextField fx:id="textFieldPassword">
                           <HBox.margin>
                              <Insets left="2.0" />
                           </HBox.margin>
                        </TextField>
                     </children></HBox>
                  <HBox prefHeight="27.0" prefWidth="200.0" spacing="15.0">
                     <children>
                        <Button fx:id="buttonLogin" mnemonicParsing="false" onAction="#loginFunction" prefWidth="100.0" style="-fx-alignment: center; -fx-background-color: white; -fx-text-fill: #1d3356;" text="Login" />
                        <Button fx:id="buttonReset" mnemonicParsing="false" prefWidth="100.0" style="-fx-alignment: center; -fx-background-color: white; -fx-text-fill: #1d3356;" text="Reset" />
                     </children></HBox>
               </children>
               <padding>
                  <Insets left="180.0" />
               </padding>
            </VBox>
            <Label fx:id="labelCredentialsStatus" text="Credentials are" textFill="WHITE" visible="false" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="180.0" />
         </children></AnchorPane>
   </children>
</AnchorPane>
